<!DOCTYPE html>
<html>
<head>
  <title>BookApp</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="page">
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <div class="page_item">
    <%= link_to "Home Page", root_path, :method => :get %> |
    <%= link_to("All Books", books_path, :method => :get) %> |
    <% if !@user %>
      <%= link_to("Sign Up", new_user_registration_path, :method => :get) %> |
      <%= link_to("Login", new_user_session_path, :method => :get) %>
    <% elsif @user.id and @user.id > 0 %>
      Logged in as: <%= link_to("#{@user.email}", edit_user_registration_path, :method => :get) %> |
      <%= link_to("Logout", destroy_user_session_path, :method => :delete) %> |
      <%= link_to("Your Books", user_path(@user), :method => :get) %> |
      <%= link_to("Create New Book", new_book_path, :method => :get) %>
    <% end %>
  </div>

  <%= yield %>
</div>

</body>
</html>
