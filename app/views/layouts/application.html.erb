<!DOCTYPE html>
<html>
<head>
  <title>BookApp</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<%= yield %>

<% if !@user %>
	<%= link_to("Sign Up", new_user_registration_path, :method => :get) %> |
	<%= link_to("Login", new_user_session_path, :method => :get) %>
<% elsif @user.email != "" %>
	<%= link_to("Logout", destroy_user_session_path, :method => :delete) %> |
	Logged in as: <%= link_to("#{@user.email}", edit_user_registration_path, :method => :get) %> |
	<%= link_to("Your Books", user_path(@user), :method => :get) %> |
	<%= link_to("Create New Book", new_book_path, :method => :get) %> |
	<%= link_to("All Books", books_path, :method => :get) %>
<% end %>

</body>
</html>
