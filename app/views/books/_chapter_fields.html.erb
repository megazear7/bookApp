<p class="page_item fields">
  <%= f.label :title, "Chapter Title" %><br/>
  <%= f.text_field :title %><br/><br/>

  <%= f.label :position, "Chapter Number"%><br/>
  <%= f.text_field :position %><br/>

  <%= f.label :content %><br/>
  <%= f.text_area :content, rows: 15, cols: 50, :wrap => :hard %><br/><br/>

  <%= f.hidden_field :_destroy %>
  <%= link_to_remove_fields "Remove Chapter", f %><br/><br/>
</p>
