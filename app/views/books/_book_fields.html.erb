<%= form_for @book do |f| %>

  <%= f.label :title %><br/>
  <%= f.text_field :title %><br/><br/>

  <%= f.label :author %><br/>
  <%= f.text_field :author %><br/><br/>

  <%= f.label :short_description %><br/>
  <%= f.text_area :short_description, rows: 2, cols: 50, maxLength: 100, :wrap => :hard %><br/><br/>

  <%= f.label :long_description %><br/>
  <%= f.text_field :long_description %><br/><br/>
  <%= f.text_area :long_description, rows: 6, cols: 50, maxLength: 300, :wrap => :hard %><br/><br/>

  <%= f.fields_for :chapters do |builder | %>
    <%= render 'chapter_fields', :f => builder %>
  <% end %>

  <p><%= link_to_add_fields "Add Chapter", f, :chapters %></p>

  <%= f.submit %>

<% end %>
