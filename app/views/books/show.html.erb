<h1><%= @book.title  %></h1>
<p>Author: <%= @book.author  %></p>

<p>Short Description: <%= @book.short_description %>
<p>Long Description: <%= @book.long_description %>

<% @book.chapters.each do |c| %>
  <p>Chapter <%= c.position %>: <%= c.title %></p>
  <p><%= c.content %></p>
<% end %>

<p><%= link_to "Edit", edit_book_path(@book), :method => :get %></p>
